<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mason.software.scheduler.EditCourse">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editName" />
    <ToggleButton
        android:textOff="M"
        android:textOn="M"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_alignParentStart="true"
        android:id="@+id/editMonday" />

    <ToggleButton
        android:textOff="T"
        android:textOn="T"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editMonday"
        android:layout_toEndOf="@+id/editMonday"
        android:id="@+id/editTuesday" />

    <ToggleButton
        android:textOff="W"
        android:textOn="W"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTuesday"
        android:layout_toEndOf="@+id/editTuesday"
        android:id="@+id/editWednesday" />

    <ToggleButton
        android:textOff="TH"
        android:textOn="TH"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editThursday"
        android:layout_toEndOf="@+id/editWednesday"
        android:layout_alignBottom="@+id/editWednesday"
        />
    <ToggleButton
        android:textOff="F"
        android:textOn="F"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editThursday"
        android:layout_toEndOf="@+id/editThursday"
        android:id="@+id/editFriday" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/update" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="end time"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/editEndTime"
        android:layout_below="@+id/editStartTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="start time"
        android:textSize="30dp"
        android:ems="10"
        android:id="@+id/editStartTime"
        android:layout_below="@+id/editMonday"
        android:layout_alignParentStart="true" />

</RelativeLayout>
